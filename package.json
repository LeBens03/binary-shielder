{
	"name": "binary-shielder",
	"version": "1.0.0",
	"description": "A template for a minimalistic APK shielder intended for a computer science lesson",
	"license": "CC-BY-SA-4.0",
	"type": "module",
	"main": "index.ts",
	"scripts": {
		"generate-parser": "antlr-ng -Dlanguage=TypeScript -l -v -o src/lib grammars/SmaliLexer.g4 grammars/SmaliParser.g4",
		"build": "tsc",
		"start": "npm run build && node dist/index.js",
		"clean": "rimraf dist/"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"prettier": "^3.7.1",
		"rimraf": "^6.1.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"antlr-ng": "^1.0.10",
		"fast-xml-parser": "^5.3.2"
	}
}
